{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "outDir": "dist",
    "allowJs": true,
    "skipLibCheck": true,
    "paths": {
      "@domain/*": ["domain/*"],
      "@intro/*": ["intro/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    ".eslint",
    "src",
    "tests",
    "scripts",
    "vitest.config.ts"
  ]
}
